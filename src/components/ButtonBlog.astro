---
import { Icon } from 'astro-icon';

const { title } = Astro.props
---

<button class="blog-btn">
  <div class="content">
    <span>{title}</span>
    <Icon name="blog-chevron"/>
  </div>
</button>

<style lang="scss">
  .blog-btn {
    background: linear-gradient(
      329.13deg,
      rgba(51, 152, 123, 0.5) -0.94%,
      rgba(64, 148, 120, 0.5) 28.26%
    );
    padding: 0.6rem 1.2rem;
    border-radius: 8px;
    position: relative;
    overflow: hidden;
    box-shadow: 0px 3px 37px -8px rgba(0,0,0,0.25);

    transition: .5s cubic-bezier(0.25, 0.46, 0.45, 0.94);

    &::before{
      content: '';
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      opacity: 0;
      transition: inherit;
      background: linear-gradient(
      329.13deg,
      rgba(51, 81, 152, 0.5) -0.94%,
      rgba(148, 68, 64, 0.5) 28.26%

    );
    }

    &:hover{
      box-shadow: 0px 3px 37px 2px rgba(0,0,0,0.25);

      &::before{
        opacity: 1;
      }
    }
  }

  .content{
    display: flex;
    place-items: center;
    justify-content: space-between;

    span{
      color: var(--text-light-color);
    }
  }

  [astro-icon="blog-chevron"] {
        fill: currentColor;
        width: 12px;
    }
</style>
